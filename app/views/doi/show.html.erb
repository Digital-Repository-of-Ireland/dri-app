<% if @available %>
  <div><%= t('dri.views.doi.links.view_full_object', :url => solr_document_path(@object_id)).html_safe %></div>
<% else %>
  <p><i class="fa fa-exclamation-circle"></i><%= t('dri.views.doi.unavailable') %></p>
  <p><%= @reason %></p>
<% end %>
<br/>
<table class="table table-bordered table-condensed">
<thead>
  <th>DOI</th>
  <th><%= t('dri.views.doi.fields.modified') %></th>
  <th><%= t('dri.views.doi.fields.modified_at') %></th>
</thead>
<% @history.each do |doi| %>
  <tr>
    <td><%= doi.doi %></td>
    <td><%= doi.modified %></td>
    <td><%= doi.created_at %></td>
  </tr>
<% end %>
</table>    
