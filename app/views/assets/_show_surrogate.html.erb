<% if can? :read, @document %>
  <div class="dri_object_render_block">
    <% if @generic_file.audio? %>
      <div class="dri_audio_player">
        <audio controls>
          <source src="<%= @presenter.surrogate_url(@generic_file.alternate_id, "mp3") %>" type="audio/mpeg">
        </audio>
      </div><!-- close dri_audio_player -->
    <% elsif @generic_file.video? %>
      <div>
        <video width="320" height="240" controls>
          <source src="<%= @presenter.surrogate_url(@generic_file.alternate_id, "mp4") %>" type="video/mp4">
        </video>
      </div>
    <% elsif @generic_file.pdf? %>
      <div>
        <img src="<%= @presenter.surrogate_url(@generic_file.alternate_id, "thumbnail_large") %>" alt="pdf">
      </div>
    <% elsif @generic_file.image? %>
      <img src="<%= @presenter.surrogate_url(@generic_file.alternate_id, "thumbnail_medium") %>" alt="generic">
    <% end %>
  </div>

<% else %>
  <h2 class="dri_restrict_title"><%= t('dri.views.catalog.forms.restricted_asset') %></h2>
  <p class="dri_restrict_message"><%= t('dri.views.catalog.legends.no_permission') %></p>
<% end %>
