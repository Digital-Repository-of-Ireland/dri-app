<div class="modal fade" id="dri_cookie_modal" tabindex="-1" role="dialog" aria-describedby="dri_end_user_agreement_text" aria-labelledby="dri_cookie_modal_header">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="dri_cookie_modal_header"><%= t('dri.application.terms.header') %></h1>
      </div>
      <div class="modal-body">
        <div class="dri_cookie_acceptance_text">
           <p><%= render partial: 'shared/terms' %></p>
        </div>
        <p><%= t('dri.application.terms.message', :url => main_app.page_path('terms') ).html_safe %></p>
      </div>
      <div class="modal-footer">
        <button type="button" id="accept_cookies" class="dri_button_green" data-bs-dismiss="modal" onclick="Cookies.set('accept_cookies', 'yes', { path: '/', expires: 10000 });">
          <%= t('dri.application.terms.accept') %>
        </button>
        <a href="pages/terms"><button type="button" class="dri_button_black" id="reject_agreement"><%= t('dri.application.terms.reject') %></button></a>
      </div>
    </div>
  </div>
</div>
