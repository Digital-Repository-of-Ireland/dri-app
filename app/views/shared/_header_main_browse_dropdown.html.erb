<li class="dropdown dri_dropdown">
  <a href="http://www.dri.ie/" class="dropdown-toggle" role="button" aria-expanded="false"><%= t('dri.headerlinks.browse') %> <span class="caret"></span></a>
  <ul class="dropdown-menu" role="menu">


<% if ((controller_name == 'catalog') && (controller.action_name != 'index')  || (request.path.include? "/catalog") ) %>
    <li class="active">
<% else %>
    <li>
<% end %>

<%= link_to t('dri.headerlinks.browse_collections'), main_app.search_catalog_path(mode: 'collections', search_field: 'all_fields'), id: 'browse' %>
</li>

<% if (controller.controller_name == 'institutes' && controller.action_name == 'index') %>
    <li class="active">
<% else %>
    <li>
<% end %>
<%= link_to t('dri.headerlinks.browse_organisations'), main_app.organisations_path, id: 'institutions' %></li>

  </ul>
</li>
