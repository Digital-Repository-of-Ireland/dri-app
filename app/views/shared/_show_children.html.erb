<% if children.present? %>
  <div class="dri_section_block" id="collection_children">
    <div class="dri_section_title">
      <span id="dri_sub_collection_page_info">
        <%= "#{t('dri.views.catalog.headers.sub_collections')}" %> (<%= children.length %>)
      </span>
    </div>
             
    <div id="dri_sub_collection_list" class="dri_scroller" >
      <% children.each do |child| %>
        <div>
          <%= render partial: 'shared/child', locals: { child: child } %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function () {
    $('.dri_scroller').slick({
      lazyLoad: 'ondemand',
      dots: false,
      infinite: true,
      variableWidth: true,
      slidesToShow: 4,
      responsive: [
        {
          breakpoint: 1101,
          settings: {
            slidesToShow: 3,
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 2,
          }
        }
      ]
    })
  });
</script>
