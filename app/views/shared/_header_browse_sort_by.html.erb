<% if has_browse_params? %>
    <!-- navigation to allow the user to determine how the search result are sorted e.g. by relevance, A to Z, Z to A -->
    <nav id="dri_sort_nav_id" class="dri_sort_nav" >
      <label for="dri_sort_options_id" class="sr-only"><%= t('dri.help.dri_sort_options_title') %></label>
      <select id="dri_sort_options_id" class="dri_select" name="sort" data-content="<%= t('dri.help.dri_sort_options') %>"  data-original-title="<%= t('dri.help.dri_sort_options_title')%>" data-trigger="hover" data-placement="right">
        <%- blacklight_config.sort_fields.each do |sort_key, field| %>
            <% label = t("blacklight.search.sort.#{field.label}", default: field.label) %>
            <% if field.label == current_sort_field.label %>
                <option value="<%= url_for(search_state.params_for_search.merge(:sort => sort_key)) %>" selected><%= label %></option>
            <% else %>
                <option value="<%= url_for(search_state.params_for_search.merge(:sort => sort_key)) %>"><%= label %></option>
            <% end %>
        <%- end -%>
      </select>
    </nav>

<% end %>
