<% lang_params = {:path => request.fullpath} %>

<li class="dropdown dri_dropdown hidden-sm hidden-md hidden-lg">

	<a href="#" id="dri_manage_id" data-toggle="dropdown" role="button" aria-expanded="false" class="dropdown-toggle"><%= t('dri.headerlinks.language') %> <span class="caret"></span></a>

	<ul class="dropdown-menu" role="menu">
		<% if I18n.locale == :en %>
		<% lang_params[:id] = 'ga' %>
		<li class="active">
			<a>English</a>
		</li>
		<li>
			<%= link_to 'Gaeilge', main_app.lang_path(lang_params), id: :ga %>
		</li>
		<% else %>
		<% lang_params[:id] = 'en' %>
		<li class="active">
			<a>Gaeilge</a>
		</li>
		<li>
			<%= link_to 'English', main_app.lang_path(lang_params), id: :en %>
		</li>
		<% end %>
	</ul>
</li>
