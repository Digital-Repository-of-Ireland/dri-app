<div class='choose-vocab-container'>
  <%
    vocabs = [
      ["LOC Subject Headings", "/qa/search/loc/subjects?q="],
      ["LOC Names", "/qa/search/loc/names?q="],
      ["Getty Art and Architecture", "/qa/search/getty/aat?q="],
      ["Logainm", "/qa/search/logainm/subjects?q="],
      ["NUTS3", "/qa/search/nuts3/subjects?q="],
      ["OCLC FAST", "/qa/search/assign_fast/all?q="],
      ["Unesco", "/qa/search/unesco/subjects?q="],
      ["Disable", "na"]
    ]
    # if no default is set, use the first label
    default ||= vocabs[0][0]
  %>
  <select class='vocab-dropdown'>
    <% vocabs.each do |arr| %>
      <option <%= selected='selected' if arr[0] == default %> value="<%=arr[1]%>">
        <%=arr[0]%>
      </option>
    <% end %>
  </select>

  <i class="dri_help_popover fa fa-info-circle fa-1"
      data-original-title="<%=t('dri.help.autocomplete.title')%>"
      data-content="<%=t('dri.help.autocomplete.content')%>"
      data-trigger="hover"
      data-placement="right">
  </i>
</div>
