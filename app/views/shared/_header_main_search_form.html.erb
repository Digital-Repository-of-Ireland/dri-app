  <%= form_tag main_app.search_catalog_path, :method => :get, :id => 'mobile_searchform', :class => 'dri_search_term_input_form' do %>
    <% if search_fields.length > 1 %>
      <%= select_tag(:search_field,
                     options_for_select(search_fields, h(params[:search_field])),
                     title: t('blacklight.search.form.search_field.title'),
                     id: "search_field",
                     class: "custom-select search-field") %>
    <% elsif search_fields.length == 1 %>
      <%= hidden_field_tag :search_field, search_fields.first.last %>
    <% end %>

    <% if (params[:mode].blank?) %>
        <%= hidden_field_tag 'mode', 'objects' %>
    <% end %>

    <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)).html_safe %>
    <!-- ID for the search box of 'q_text', to distinguish from date range search when rendering filter constraints in the UI -->
    <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :id => "mobile_q", :class => "dri_search_term_text_input dri_no_clear dri_help_popover_slow", :'data-content' =>  t('dri.help.q'),  :'data-original-title' =>  t('dri.help.q_title'), :'data-trigger' => "hover", :'data-placement' => "bottom" %>

    <%= link_to "+ #{t('dri.views.objects.buttons.advanced_options')}", '',
        :'data-target' => '#dri_advanced_search_modal_id',
        :'data-toggle' => 'modal',
        id: 'advanced_search_button_mobile' %>

    <button type="submit" class="dri_search_term_text_submit_button dri_no_display" id="search">
      <%=t('blacklight.search.form.submit')%>
    </button>
  <% end %><!-- end form -->
<!-- close dri_search_term_input_form -->
