<% if @tasks.empty? %>
  <p><i class="fa fa-exclamation-circle"></i><%= t('dri.views.catalog.legends.no_tasks') %></p>
<% else %>
  <div class="dri_pagination_nav" role="navigation" aria-label="pagination">
    <%= paginate @tasks %>
    <%= link_to t('dri.views.tasks.links.delete_all_tasks'), destroy_user_tasks_path, 
      :method => :delete, :id => "clear_tasks", :class => "pull-right btn"  %>
  </div>
  <table class="table table-bordered table-condensed">
  <thead>
    <th>Name</th>
    <th>Status</th>
    <th>Message</th>
  </thead>
  <% @tasks.each do |task| %>
    <% task.update %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.status %></td>
      <td><%= task.message %></td>
    </tr>
  <% end %>
  </table>
<% end %>  
