<script>
	function fileUploadHelper(thisObj) {
		$("#institution_logo").html(($(thisObj).val()).replace("C:\\fakepath\\", ""));
	}
</script>

<div class="dri_collection_institutes_dropdown">
	<div class="dri_institutes_title">
		<div class="dri_file_upload">
			<div class="dri_add_institute_link">
				<h5><%= t('dri.views.collection.institute.edit') %></h5>
			</div>
			<div id="dri_add_institutes_block">
				<div class="dri_file_upload">
					<%= form_for(@inst, url: organisation_path) do |f| %>
					<div>
						<a class='btn btn-default' href='javascript:;'> <h5 class="dri_upload_file_text"><i class="fa fa-upload">&nbsp;</i><%= "#{t('dri.views.collection.institute.form.logo')}"%></h5>
						<p>
							(recommended height 75px)
						</p> <%= f.file_field :logo, :accept=>'image/*', :onchange=>'fileUploadHelper($(this));' %> <h5 id="institution_logo">No File</h5> </a>
					</div>
					<label for="institute_name"> <%= t('dri.views.collection.institute.form.name') %></label>
					<%= f.text_field :name, :required=>'required' %>
					<label for="institute_url"><%= t('dri.views.collection.institute.form.url') %></label>
					<%= f.url_field :url, :required=>'required'  %>
                    <%= f.label :depositing, t('dri.views.collection.institute.form.depositing') %>
                    <%= f.check_box :depositing %>
                   	<%= f.submit t('dri.views.collection.institute.edit'), :id => 'edit_institute', :class=>'btn dri_grey_button' %>
					<% end %>
					<%= form_for(@inst, url: organisation_path) do |f| %>
					<%= f.submit "Cancel", :class=>'btn dri_green_button' %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
