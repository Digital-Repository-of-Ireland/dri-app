<h2 style="width:100%"><%= t('dri.headerlinks.manage_users') %></h2>
<br/>
<%= form_tag(manage_users_path, method: :post) do %>
  <%= label_tag(:user, t('dri.views.manager_users.email') ) %>
  <%= text_field_tag(:user) %>
  <%= submit_tag( t('dri.views.manager_users.buttons.submit') ) %>
<% end %>

<h2 style="width:100%"> <%= (t :'user_groups.views.users.index.all_users') %></h2>
</br>
<table id="datatable_cm_users" class="display" data-source="<%= reports_url(report: "users", format: "json") %>">
  <thead>
    <tr>
      <th>id</th>
      <th>Surname</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Last Signed In</th>
      <th>Last IP</th>
      <th>Confirmed</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
