<% if query_has_workspace_constraints? %>
  <div id="dri_facet_restrictions_container_id"
     class="dri_facet_restrictions_container dri_clearfix">
    <ul id="dri_facet_restrictions_links_id"
        class="dri_facet_restrictions_links" data-bs-content="<%= t('dri.help.dri_facet_restrictions_links') %>"  data-bs-title="<%= t('dri.help.dri_facet_restrictions_links_title')%>" data-bs-trigger="hover" data-bs-placement="top">

      <%= render_workspace_constraints_query(params) + render_constraints_filters(params) %>

      <% copyParams = search_state.to_h.clone %>
      <% if copyParams[:mode].nil? %>
        <% copyParams[:mode] = "objects" %>
        <% copyParams[:search_field] = "all_fields" %>
      <% end %>
      <% options = copyParams.except(*[:f, :q_ws, :c_date, :p_date, :s_date, :year_from, :year_to]) %>

      <li class="dri_clear_all">
        <%= link_to t('dri.views.catalog.buttons.clear_search_facet_list'), url_for(options), id: 'browse_clear_all' %>
      </li>
    </ul>
  </div>
<% end %>
