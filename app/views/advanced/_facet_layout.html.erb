<%
  facet_active = facet_field_in_params?(facet_field.field) || has_selected_facet_param?(facet_field.key)
  should_collapse_facet = !has_selected_facet_param?(facet_field.key) && should_collapse_facet?(facet_field)
%>
<div class="panel panel-default facet_limit blacklight-<%= facet_field.field.parameterize %> <%= 'facet_limit-active' if facet_active %>">
  <div class="<%= "collapsed" if should_collapse_facet %> collapse-toggle panel-heading" data-toggle="collapse" data-target="#<%= facet_field_id(facet_field) %>">
    <h5 class="dri_title_dropdown">
      <%= link_to facet_field_label(facet_field.field), "#", :"data-no-turbolink" => true %>
    </h5>
  </div>
  <div id="<%= facet_field_id(facet_field) %>" class="panel-collapse facet-content <%= should_collapse_facet ? 'collapse' : 'in' %>">
  <!-- <div id="<%= facet_field_id(facet_field) %>" class="panel-collapse facet-content in"> -->
    <div class="panel-body">
      <%= yield %>
    </div>
  </div>
</div>
