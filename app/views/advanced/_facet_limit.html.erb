<ul class="facet-values list-unstyled blacklight-advanced-facet-select">
  <% display_facet.items.each do |item| -%>
  <li>
    <span class="facet-checkbox">
      <%= check_box_tag(
            "f_inclusive[#{solr_field}][]",
            item.value.to_sym,
            facet_value_checked?(solr_field, item.value),
            id: "f_inclusive_#{solr_field}_#{item.value.parameterize}",
            # try to get value from nested params hash, if it doesn't exist return nil, leave box unchecked
            checked: params&.[]('selected_facets')&.[](solr_field)&.include?(item.value))
      %>
    </span>

    <span class="label-and-count">
      <%= label_tag "f_inclusive_#{solr_field}_#{item.value.parameterize}"  do %>
        <%= render_facet_value(solr_field, item, :suppress_link => true) %>
      <% end %>
    <span>
  </li>
  <% end -%>
</ul>
