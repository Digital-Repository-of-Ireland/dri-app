
<%- if controller_name != 'sessions' %>
    <%= link_to t('dri.sign_in.title'), new_session_path(resource_name), :id => "login" %>
<% end -%>

<%= link_to user_group.new_user_path, :id => "signup" do %>
    <span class=""><%= t('dri.sign_in.register') %></span>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
    <%= link_to (new_password_path(resource_name)), :id => "password_reset" do %>
        <span class="text_right"><%= t('dri.sign_in.forgot_password') %></span>
    <% end %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to (new_confirmation_path(resource_name)), :id => "password_reset_not_sent" do %>
        <span class="text_line"><%= t('dri.sign_in.no_confirmation') %></span>
    <% end %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('dri.sign_in.no_unlock'), new_unlock_path(resource_name), :id => "unlock_not_sent" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
    <div class="dri_signin_socialmedia">
      <h2><%= t('dri.sign_in.with_another_account') %></h2>
      <% signWith = t('dri.sign_in.sign_in_with') %>
      <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to (send("user_#{provider}_omniauth_authorize_path")), method: :post do %>
              <div class="dri_signin_edugate"><%= t('dri.sign_in.sign_in_with_institution') %></div>
          <% end %>
      <% end -%>
    </div>
<% end -%>

