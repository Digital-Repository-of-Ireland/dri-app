<h3><%= t('dri.reports.headings.stats_collection_sizes') %></h3>
<table id="datatable_stats" class="display" data-source="<%= reports_url(report: "stats", format: "json", protocol: Rails.application.config.action_mailer.default_url_options[:protocol]) %>">
  <thead>
    <tr>
      <th><%= t('dri.datatables.stats.collection_id') %></th>
      <th><%= t('dri.datatables.stats.total_objects') %></th>
      <th><%= t('dri.datatables.stats.size') %></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th colspan="3" style="text-align:right"><%= "#{t('dri.reports.headings.stats_collection_total')}: #{number_to_human_size(@total_file_size)}" %></th>
   </tr>
  </tfoot>
  <tbody>
  </tbody>
</table>