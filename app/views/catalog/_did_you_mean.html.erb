<% if @response.total <= blacklight_config.spell_max and @response.spelling.words.size > 0 %>
    <div id="spell">
      <h4 class="suggest">
        <i>
          <%= t('blacklight.did_you_mean', :options =>  @response.spelling.words.map { |word| link_to_query(word['word']) }.join(" #{t('blacklight.or')} ")).html_safe %>
        </i>
      </h4>
    </div>
<% end %>
